{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@components/*": ["src/components/*"],
      "@todo-context/*": ["src/todo-context/*"],
      "@custom-types/*": ["src/custom-types/*"],
      "@img/*": ["src/img/*"],
      "@fonts/*": ["src/fonts/*"],
      "@styles/*": ["src/styles/*"],
    },
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}